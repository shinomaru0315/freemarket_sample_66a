.confirm-contents
  .confirm-contents__confirm-header
    %svg{:viewbox => "0 0 281.19 84.08", :xmlns => "http://www.w3.org/2000/svg", width: "180", height: "50"}
      %defs
        :css
          .cls-1{fill:#fff;stroke:#b53d22;stroke-miterlimit:10;}.cls-2{font-size:40px;fill:#231815;font-family:YuGo-Bold-83pv-RKSJ-H, YuGothic;}
      %title アセット 1
      %g{"data-name" => "レイヤー 2", :id => "レイヤー_2"}
        %g{"data-name" => "レイヤー 1", :id => "レイヤー_1-2"}
          %polygon.cls-1{:points => "36.41 83.5 0.5 62.77 0.5 21.31 36.41 0.58 72.32 21.31 72.32 62.77 36.41 83.5"}
          %polyline.cls-1{:points => "0.5 21.31 36.41 42.04 72.32 21.31"}
          %polyline.cls-1{:points => "36.41 83.5 36.41 49.36 36.41 42.04"}
          %line.cls-1{:x1 => "36.41", :x2 => "0.5", :y1 => "52.41", :y2 => "31.67"}
          %line.cls-1{:x1 => "72.32", :x2 => "36.41", :y1 => "33.2", :y2 => "50.88"}
          %text.cls-2{:transform => "translate(86.41 62.77)"} Fmarket


  .confirm-contents__confirm-main
    .confirm-contents__confirm-main__confirm-title
      %p
        購入内容の確認

    .confirm-contents__confirm-main__confirm-product
      .product-box
        .product-box__product-image
          - if @product.images.attached?
            = image_tag @product.images.first , width: "70px", height: "70px"
        .product-box__product-texts
          .product-box__product-texts__product-name
            = @product.name
          .product-box__product-texts__product-price
            %span
              ¥
              = @product.price
            %span
              （税込）送料込み

    .confirm-contents__confirm-main__confirm-info
      .paying-contents
        .paying-contents__paying-box
          .paying-contents__paying-box__paying-price
            .price-left
              支払い金額
            .price-right
              %span
                ¥
                = @product.price
          .paying-contents__paying-box__paying-point
            %i.fas.fa-square
            %span
              ポイントを使用 (所持ポイント: P0)

        .paying-contents__paying-how
          .text-how
            支払い方法
          .text-register
            = link_to "#" do
              %i.fas.fa-plus-circle
              登録してください

        .paying-contents__paying-delivery
          .paying-contents__paying-delivery__paying-text
            .text-left
              発送先
            .text-right
              = link_to "#" do
                変更する

          .paying-contents__paying-delivery__paying-address
            %p
              〒000-0000
              %br
              xxxxxxxxxxxxxxxxxxx
              %br
              なまえ

        .paying-contents__paying-button
          %button{disabled: "", type: "submit", class: 'gray-button'} 購入する




  .confirm-contents__confirm-footer
    .footer-contents
      .footer-contents__footer-texts
        .text-left
          = link_to "#" do
            プライバシーポリシー
        .text-center
          = link_to "#" do
            メルカリ利用規約
        .text-right
          = link_to "#" do
            特定商取引に関する表記

      .footer-contents__footer-logo
        %svg{:viewbox => "0 0 147.09 129.96", :xmlns => "http://www.w3.org/2000/svg", width: "80", height: "68"}
          %defs
            :css
              .cls-1,.cls-2{fill:#231815;stroke-miterlimit:10;opacity:0.19;}.cls-1{stroke:#fff;}.cls-2{font-size:36px;stroke:#231815;font-family:YuGo-Bold-83pv-RKSJ-H, YuGothic;}
          %title アセット 13
          %g{"data-name" => "レイヤー 2", :id => "レイヤー_2"}
            %g{"data-name" => "レイヤー 1", :id => "レイヤー_1-2"}
              %polygon.cls-1{:points => "71.54 83.5 35.63 62.77 35.63 21.31 71.54 0.58 107.45 21.31 107.45 62.77 71.54 83.5"}
              %polyline.cls-1{:points => "35.63 21.31 71.54 42.04 107.45 21.31"}
              %polyline.cls-1{:points => "71.54 83.5 71.54 49.36 71.54 42.04"}
              %line.cls-1{:x1 => "71.54", :x2 => "35.63", :y1 => "52.41", :y2 => "31.67"}
              %line.cls-1{:x1 => "107.45", :x2 => "71.54", :y1 => "33.2", :y2 => "50.88"}
              %text.cls-2{:transform => "translate(0.5 117.04)"} Fmarket

      .footer-contents__footer-rights
        © Mercari, Inc.







