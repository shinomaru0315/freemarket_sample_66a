      .field
        = f.label :city, "市区町村"
        %span 必須
        %br/
        = f.text_field :city, placeholder: "例) 横浜市緑区"
      .field
        = f.label :district, "番地"
        %span 必須
        %br/
        = f.text_field :district, placeholder: "例) 青山1-1-1"
      .field
        = f.label :building, "建物名"
        %span 任意
        %br/
        = f.text_field :building, placeholder: "例) 柳ビル103"
      .action
        = f.submit "次へ進む"
